//!#version 440
#include "../raytracer.glsl"
layout(local_size_x=16, local_size_y=16, local_size_z = 1) in;
layout(rgba8, binding=0) writeonly uniform image2DArray computeShaderOutput;


void main()
{
    vec3 raytracerOutputColor = raytrace(gl_GlobalInvocationID.xy + 0.5f);
	imageStore(computeShaderOutput, ivec3(gl_GlobalInvocationID.xyz), vec4(raytracerOutputColor, 1.0) );
}