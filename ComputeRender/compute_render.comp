#version 440
layout(local_size_x=16, local_size_y=16, local_size_z = 1) in;
layout(rgba8, binding=0) uniform image2DArray computeShaderOutput;

void main()
{
	vec3 color = vec3(gl_GlobalInvocationID.xyz)/(gl_WorkGroupSize*gl_NumWorkGroups);
	imageStore(computeShaderOutput, ivec3(gl_GlobalInvocationID.xyz), vec4(color, 1.0) );
}